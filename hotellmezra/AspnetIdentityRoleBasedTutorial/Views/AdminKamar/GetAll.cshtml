@model List<AspnetIdentityRoleBasedTutorial.Data.Kamar>

<h1>Daftar Kategori Kamar</h1>

<p>
    <a asp-action="TambahKamar" class="btn btn-primary">Tambah Kamar</a>
</p>
                    
<table class="table">
    <thead>
        <tr>
            <th>ID</th>
            <th>Nomor Kamar</th>
            <th>Tipe Kamar</th>
            <th>harga</th>
            <th>gambar</th>
            <th>ketersediaan</th>
            <th>Aksi</th> <!-- Kolom untuk tombol Edit dan Hapus -->
        </tr>
    </thead>
    <tbody>
        @foreach (var kamar in Model)
        {
            <tr>
                <td>@kamar.KamarID</td>
                <td>@kamar.NomorKamar</td>
                <td>@kamar.KategoriKamar.NamaKategori</td>
                <td>@kamar.Price</td>
                
                <td>@kamar.Ketersediaa</td>
                <td>
                    <!-- Tombol Edit dengan link ke halaman EditTipe -->
                    <a asp-action="EditTipe" asp-route-id="@kamar.KamarID" class="btn btn-primary">Edit</a>

                    <!-- Tombol Hapus dengan form POST -->
                    <form asp-action="HapusTipe" asp-route-id="@kamar.KamarID" method="post" style="display: inline;">
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Apakah Anda yakin ingin menghapus tipe ini?')">Hapus</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
