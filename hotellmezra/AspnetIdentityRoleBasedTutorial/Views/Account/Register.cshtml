@model ModelClasses.ViewModel.RegisterVM

<div class="d-flex justify-content-center align-items-center vh-100" style="background-image: url('/Images/Registered.jpg'); background-size: cover; background-repeat: no-repeat; background-attachment: fixed; background-position: center;">
    <div class="row p-5">
        <h3 class="text-dark fw-bold text-center"><strong>Registration form</strong></h3>
        <div class="col-12 border-2 border-success" style="border: solid">
            <form asp-action="Register" asp-controller="Account" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="FirstName"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="LastName"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="UserName"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="UserName" class="form-control" />
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="Email"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="Email" class="form-control" />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="Address"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="PhoneNumber"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="City"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="City" class="form-control" />
                        <span asp-validation-for="City" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="PostalCode"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="PostalCode" class="form-control" />
                        <span asp-validation-for="PostalCode" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="Password"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="Password" class="form-control" placeholder="ex-12PD# not more than 8 characters" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                </div>
                <div class="row p-2">
                    <div class="col-lg-4 col-md-4 col-sm-12">
                        <strong><label asp-for="ConfirmPassword"></label></strong>
                    </div>
                    <div class="col-lg-8 col-md-8 col-sm-12">
                        <input asp-for="ConfirmPassword" class="form-control" placeholder="Use the same password as above" />
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
                <div class="p-2">
                    <button type="submit" class="btn btn-light btn-outline-danger form-control">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
